{
  "compilerOptions": {
    "target": "es6", // important for web components
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/*.d.ts", "node_modules"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../zenn-embed-elements/custom-elements.ts"
  ]
}
